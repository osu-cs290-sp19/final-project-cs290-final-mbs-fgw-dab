      <main class="questionbox">

      <article class="staticquestion">
          <div class="questioncontent">
          <p class="questiontext">
            Welcome to Pizza!
          </p>
          <p class="questionauthor">
            The Pizza Team
          </p>
	    <button type="button" class="windowanswer">Answer</button>


		<article class="tag">
		<div class="tagcontent">
		<p class="tagprefix">
		Tags:
		</p>
		<p class="tagtext">
		<button type="button" class="taglink">welcome</button>
		</p>
		</div>
		</article>
		<hr>
		<article class="reply">
		<div class="replycontent">
		<p class="replytext">
			Login or create an account to start asking questions.
		</p>
		<p class="replyauthor">
			The Pizza Team
		</p>
		</div>
		</article>
		</div>

      </article>
	  
	  <div id='questionholder'>

			{{#each this}}
				{{#if author}}
					{{> question this}}
				{{/if}}
			{{/each}}

		</div>

    </main>

      <div id="windowbg" class="hidden"></div>

      <div id="windowmain" class="hidden">
        <div class="windowdialog">

          <div class="windowhead">
            <h3>Ask A Question</h3>
          </div>
          <div class="windowtext">
            <div class="windowinputelement">
              <label for="windowtext">Question</label>
              <textarea id="windowtext"></textarea>
            </div>
			<div class="windowinputelement">
              <label for="windowtags">Tags</label>
              <textarea id="windowtags"></textarea>
            </div>
          </div>
          <div class="windowfoot">
            <button type="button" class="windowcancel">Cancel</button>
            <button type="button" class="windowsubmit">Submit</button>
          </div>
        </div>
      </div>

      <div id="createwindowmain" class="hidden">
        <div class="windowdialog">
          <div class="windowhead">
            <h3>Create Account</h3>
          </div>
          <div class="windowtext">
            <div class="windowinputelement">
              <label for="createwindowusername">Username</label>
              <textarea id="createwindowusername"></textarea>
            </div>
            <div class="windowinputelement">
              <label for="createwindowpassword">Password</label>
              <input type="password" id="createwindowpassword">
            </div>
          </div>
          <div class="windowfoot">
            <button type="button" class="createwindowcancel">Cancel</button>
            <button type="button" class="createwindowsubmit">Submit</button>
          </div>
        </div>
      </div>

      <div id="loginwindowmain" class="loginwindowmain hidden">
        <div class="windowdialog">
          <div class="windowhead">
            <h3>Login</h3>
          </div>
          <div class="windowtext">
            <div class="windowinputelement">
              <label for="loginwindowusername">Username</label>
              <textarea id="loginwindowusername"></textarea>
            </div>
            <div class="windowinputelement">
              <label for="loginwindowpassword">Password</label>
              <input type="password" id="loginwindowpassword">
            </div>
          </div>
          <div class="windowfoot">
            <button type="button" class="loginwindowcancel">Cancel</button>
            <button type="button" class="loginwindowsubmit">Submit</button>
          </div>
        </div>
	  </div>

      <div id="answerwindowmain" class="hidden">
        <div class="windowdialog">
          <div class="windowhead">
            <h3>Login</h3>
          </div>
          <div class="windowtext">
            <div class="windowinputelement">
              <label for="answerwindowtext">Reply</label>
              <textarea id="answerwindowtext"></textarea>
            </div>
          </div>
          <div class="windowfoot">
            <button type="button" class="answerwindowcancel">Cancel</button>
            <button type="button" class="answerwindowsubmit">Submit</button>
          </div>
        </div>

</div>

